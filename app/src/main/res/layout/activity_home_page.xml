<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_forall"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/bitmoji"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:src="@drawable/bitmoji" />


    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_regular"

        android:layout_toEndOf="@+id/bitmoji"
        android:textColor="#0B1E51"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcometext"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/bitmoji"
        android:textColor="#0B1E51"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-35dp"
        android:layout_marginRight="20dp"


        android:src="@drawable/homepage_image" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/flipper"

        android:layout_marginStart="20dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="20dp"

        android:background="@drawable/custom_btn2">

        <TextView
            android:id="@+id/bhat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semibold"

            android:text="Need expert advice?"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/bhat1"
            android:background="@drawable/custome_button_2"
            android:backgroundTint="#432FAA"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Ask Us now"
            android:textColor="@color/white" />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative1"
        android:scrollbars="none">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2"
            android:rowCount="2">

            <RelativeLayout

                android:id="@+id/btn"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn12"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/answerpic1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"

                    android:src="@drawable/answer1" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/answerpic1"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Answer a\nquestion"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RelativeLayout>


            <RelativeLayout


                android:id="@+id/btn3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnhome2"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <ImageView

                    android:id="@+id/answerpic2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"

                    android:src="@drawable/img2" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/answerpic2"
                    android:fontFamily="@font/inter_semibold"

                    android:layout_marginLeft="5dp"

                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:text="Post a \nquestion"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout


                android:id="@+id/bnt2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnhome3"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/answerpic3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"

                    android:src="@drawable/img3" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/answerpic3"
                    android:fontFamily="@font/inter_semibold"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:text="My \nQuestions"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/whatsnew"

                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnhome4"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/answerpic4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"

                    android:src="@drawable/img4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/answerpic4"
                    android:fontFamily="@font/inter_semibold"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="bottom"
                    android:text="Whats \nNew"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RelativeLayout>


        </GridLayout>
    </ScrollView>


